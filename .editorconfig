# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust files
[*.rs]
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# Configuration files
[*.{yml,yaml,toml,md}]
indent_size = 2

# Documentation
[*.md]
trim_trailing_whitespace = false

# Package files
[package.json]
indent_size = 2

# Makefiles (require tabs for proper recipe syntax)
[Makefile]
indent_style = tab
trim_trailing_whitespace = false

[*.mk]
indent_style = tab
trim_trailing_whitespace = false

[**/Makefile]
indent_style = tab
trim_trailing_whitespace = false
